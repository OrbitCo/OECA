<?xml version="1.0"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- ===================================================================================== -->
    <!-- Spring  -->
    <!-- ===================================================================================== -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:oeca-web-config.xml
            file:${spring.config.dir}/oeca-commons-web/**/oeca-web-config*.xml
            classpath:oeca-svc-ref-components.xml
            file:${spring.config.dir}/oeca-svc-ref/**/oeca-svc-ref-config*.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!-- ===================================================================================== -->
    <!-- Application Version -->
    <!-- ===================================================================================== -->
    <listener>
        <listener-class>gov.epa.oeca.common.interfaces.web.ApplicationVersionServlet</listener-class>
    </listener>
    <!-- ===================================================================================== -->
    <!-- Jersey -->
    <!-- ===================================================================================== -->
    <servlet>
        <servlet-name>jersey-serlvet</servlet-name>
        <servlet-class>
            org.glassfish.jersey.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>gov.epa.oeca.services.ref.JerseyConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <!-- ===================================================================================== -->
    <!-- Swagger -->
    <!-- ===================================================================================== -->
    <servlet>
        <servlet-name>SwaggerBootstrap</servlet-name>
        <servlet-class>gov.epa.oeca.services.ref.SwaggerConfig</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <!-- ===================================================================================== -->
    <!-- Hibernate Filter -->
    <!-- ===================================================================================== -->
    <filter>
        <filter-name>hibernateFilter</filter-name>
        <filter-class>org.springframework.orm.hibernate5.support.OpenSessionInViewFilter</filter-class>
        <init-param>
            <param-name>sessionFactoryBeanName</param-name>
            <param-value>oecaSessionFactory</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>hibernateFilter</filter-name>
        <url-pattern>/action/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>hibernateFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
</web-app>